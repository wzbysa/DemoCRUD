@model IEnumerable<DEMOCRUD.Models.db.Categories>
@{
    ViewData["Title"] = "ตั้งค่า";
}

<h1>ตั้งค่า</h1>
@{
    ViewData["Title"] = "ประเภทสินค้าทั้งหมด";
}

<h1>ประเภทสินค้าทั้งหมด</h1>
<p>    
    <a asp-action="Create" class="btn btn-success float-md-right">เพิ่มประเภทสินค้า</a><br /><br />
</p>
<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th></th>
            <th class="col-md-3">ชื่อประเภทสินค้า</th>
            <th>คำอธิบายประเภทสินค้า</th>            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" class="btn btn-primary"
                   asp-route-id="@item.CategoryId">รายละเอียด</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>            
            <td>
                <a asp-action="Edit" class="btn btn-warning btn-block"
                   asp-route-id="@item.CategoryId">แก้ไข</a>
                <a asp-action="Delete" class="btn btn-danger btn-block"
                   asp-route-id="@item.CategoryId">ลบข้อมูล</a>
            </td>
        </tr>
}
    </tbody>
</table>
