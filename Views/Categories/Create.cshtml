@model DEMOCRUD.Models.db.Categories
@{
    ViewData["Title"] = "ตั้งค่าประเภทสินค้า";
}
<h3 class="alert-success text-center col-md-6">เพิ่มประเภทสินค้า</h3>
<div class="container">
    <div class="row">
        <div class="col-md-6 card card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form asp-action="CreateCategory">
                <div class="form-group">
                            <label asp-for="CategoryName" class="control-label">ชื่อประเภทสินค้า</label>
                            <input asp-for="CategoryName" class="form-control" />
                            <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <div class="form-group">
                            <label asp-for="Description" class="control-label">คำอธิบายประเภทสินค้า</label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="เพิ่มประเภทสินค้า" class="btn btn-success btn-block" />
                </div>  
            </form>
        </div>            
    </div>
    @section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}